$widget_background: rgba(0,0,0,0.5);
$selected: '#c6c647';

@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
  -moz-border-radius: $radius;
  border-radius: $radius;
}

@mixin widget {
  background-color: $widget_background;
  @include border-radius(15px);
  position:absolute;
  z-index: 210000;
  color: white;
  h2 { 
    font-size: 18px;
    color: white; 
  }
  ul li {
    list-style: none;
    color: white;
    font-size: 18px;
  }
}

.header_bar {
  position: relative;
  height: 54px;
  background-color: #4b4b4b; 
  opacity: 1;
  right: 0;
  left: 0;
  z-index: 200000;
  .header_notes {
    position: relative;
    float: left;
    width: 100%;
    padding: 0px 15px; 
    height: 10px;
    a:hover {
      p {
        color: white;
	opacity: 1.0;
      }
    }

    button.parts {
      height: 42px;
      background: none;
      font-family: 'Roboto';
      font-size: 13px;
      color: #C9C9C9;
      padding: 12px 5px 10px 0px;
      margin: 6px 0px 0px 6px;
      &.no_notifications {
        margin: 6px 0px 0px 56px;
      }
      .fa.fa-comment {
        margin-left: 10px;
        font-size: 25px;
        color: #317ab9;
        opacity: 1.0;
        margin-top: -2px;
        -webkit-font-smoothing: unset;
        &:hover {
          color: #317ab9;
          text-decoration: none;
        }
      }
      p {
        font-size: 13px;
        margin-bottom: 0px;
        color: #C9C9C9;
        float: right;
        margin-left: 10px;
          &.parts {
            float: left;
            margin-top:1px;
          }
        }
     
        #chat_js_count {
            width: 25px;
            border-radius: 20px;
            opacity: 1;
            color: white;
            text-decoration: none;
            position: absolute;
            float: left;
            margin: 0;
            top: 13px;
            z-index: 100000000;
            display: block;
          &hover {
            text-decoration: none;
          }
        }
      
      
        &:hover{
          p {
            text-decoration: underline;
            color: white;
          }
        }
      }
  }
  p {
    color: white;
    float:left;
    display:inline-block;
    opacity:.7;
  }
}

