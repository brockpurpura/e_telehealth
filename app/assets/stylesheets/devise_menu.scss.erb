$outline-color: #317ab9;


@font-face {
  font-family: "Roboto";
  src: font-url( asset-path("Roboto-Light.ttf"));
}

.center { text-align: center; }
.leftside { float: left; }

body {
  margin: 0;
  font-family: "Roboto";
  font-size: 13px;
  font-weight: normal;
  line-height: 18px;
  color: #404040;
  height: 100%;
  background-color: white;
}

body.using-mouse :focus {
  outline: none !important;
}

p, h1, h2, h3, h4, h5, select, input, a, a:link, a:hover, a:focus {
  font-family: 'Roboto';
  &:focus {
    outline: 2px solid $outline-color !important; 
    outline-offset: 4px;
  }
}

p {
  font-size: 13px;
  font-weight: normal;
  line-height: 18px;
  color: #404040;
  height: 100%;
  &.minimum_pass_length {
    color: #757575;
    font-size: 11px;
  }
  &.reset_description {
    color: #404040;
    line-height: 18px;
    font-weight: normal;
    margin: 0;
    font-family: "Roboto";
  }
}

a {
  color: #336699;
  font-size: 13px;
  font-weight: 400;
  &:focus {  color: #336699;  outline-offset: 4px;  }
  &:hover {  color: #336699;  text-decoration: underline }
  img {
    max-width: 78%;
    border: none; 
  }
}

h1 {
  font-size: 20px;
  line-height: 23px;
  color: #767676;
  padding: 2px 0px;
  margin: 2px 0px;
  font-weight: 600;
}

label {
  font-weight: 400;
  &.error {
    color: red; 
    font-size: 12px; 
    margin: 10px 0px 0px 0px;
  }
}

input[type=text], input[type=password], input[type=email] {
  height: 37px;
  margin-top: 10px;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 400;
  font-size: 15px;
  line-height: 22.5px;
  color: #333333;
  padding-left: 10px;
  box-shadow: none;
  border-radius: 5px;
  display: block;
  width: 100%;
  padding: 6px 12px;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  transition: none;    
  &:focus {
    outline-offset: 4px;
  }
  &.invalid {
    border-bottom: 2px solid red;
  }
  &.invalid::-webkit-input-placeholder {
    color: red;
  }
}

select {
  -webkit-appearance: none;
  -moz-appearance: none;
  text-indent: 1px;
  text-overflow: '';
  
  height: 37px;
  font-family: 'Source Sans Pro', sans-serif;
  font-weight: 400;
  font-size: 15px;
  line-height: 22.5px;
  color: #333333;
  padding-left: 10px;
  box-shadow: none;
  border-radius: 5px;
  display: block;
  width: 100%;
  padding: 6px 12px;
  background-color: #fff;
  background-image: none;
  border: 1px solid #ccc;
  transition: none;    
  &:focus {
    outline-offset: 4px;
  }
  &.invalid {
    border-bottom: 2px solid red;
  }
}

button, input[type=submit], #link_as_button {
  width: 185px;
  padding: 6px;
  color: white;
  background-color: #007cc2;
  font-size: 16px;
  border-radius: 5px;
  display: inline-block;
  margin-bottom: 0;
  font-weight: normal;
  text-align: center;
  vertical-align: middle;
  background-image: none;
  border: 1px solid transparent;
  white-space: nowrap;
  line-height: 1.428571429;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  &:focus  {
    background-color: #0082c8;
    outline-offset: 4px;
    border: none;
  }
  &:hover {
    background-color: #0082c8;
  }
}
 
img {
