.dropdowns {
  label {
    position: relative;
    width: 100%;
    margin-bottom: 0px;
  }

  label:before {
    content: '';
    right: 4px;
    top: 0px;
    width: 23px;
    height: 37px;
    position: absolute;
    pointer-events: none;
    display: block;
  }
  
  label:after {
    content: "";
    color: #777;
    right: 13px;
    top: 16px;
    position: absolute;
    border-top: solid 4px #777777;
    border-left: solid 4px transparent;
    border-right: solid 4px transparent;
    pointer-events: none;
  }
}


// Rating System 

.ratings {
  width: 100%;
  display: block;
  float: left;
  
  i.fal.fa-times, i.fas.fa-phone {
    color: #767676;
    font-size: 80px;
    transform: rotate(225deg);

  }

  h1 {
    font-size: 30px;
    margin: 120px 0px 40px;
    line-height: 40px;
  }

  h2 {
    font-size: 15px;
    margin: 55px 0px 10px;
    text-align: center;
    color: #767676;
    font-weight: 600;
  }
  
  a {
    font-size: 15px;
    font-size: 15px;
    font-weight: 600;
  }

  #ratingSubmitted {
    width: 247px;
    margin: 20px auto 10px; 
    text-align: center;

    .response_wrapper {
      height: 35px;
      width: 160px;
      margin: 20px auto;
 
      i.fas.fa-star {
        color: gold;
        float: left;
        font-size: 35px;
      }

      p {
        font-family: 'Roboto';
        font-size: 15px;
        color: #767676;
        float: left;
        text-align: center;
        margin: 8px 0px 0px 12px;
        font-weight: 600;
      }
    }
  }

  #ratingSystem {
    width: 247px;
    margin: 20px auto 10px; 
    text-align: center;

    label.error {
      color: red;
      font-size: 12px;
      margin: 0px 0px 10px 0px;
      width: 247px;
      display: inline-flex;
      margin-left: 6px;
      float: left;
    }
    
    button {
      margin-top: 20px;
    }

    ul {
      list-style: none;
      height: 45px;
      border-radius: 5px;
      margin: 20px auto 10px;
      &.error {
        border-bottom: 2px solid red;
        border-radius: 5px;
      }

      li {
        float: left;
        .error {
          border-bottom: 2px solid red;
        }
      }

      label { 
        color: #767676;
        font-size: 35px;
        background: white;
        padding: 0px 4px;
        border-radius: 15px;
        transition: 0.1s ease-in-out;
        margin: 0;

        &:hover {
          background-color: transparent;
          color: gold;   
          transform: translate(0, -3px);
        }
        &.hoveredStars, &.clickedStars {
          color: gold;
        }
        &:active {
          transform: translate(0, 1px);
        }
      }
      input[type=radio] {
        visibility: hidden;
        position: absolute;
      }
    }
  }
}

