.function_bar
  .tool-tip-icon 
    =link_to "javascript:;", :id => 'sliders_button', :class => '', :onclick=> "toggle_widget('sliders', 'sliders_button')" do
      .callout.left
        %p Settings 
    
      <i class="fa fa-sliders-v" style="font-size: 2em; margin-left: 2px;"></i>
  .tool-tip-icon     
    =link_to "javascript:;", :id => 'see_more', :class => 'x', :onclick=> "toggle_widget('bookmark_partial', 'see_more')", :style => "" do
      .callout.left
        %p Bookmarks 
      %i.fa.fa-thumbtack.fa-2x{:style => "margin-left: 4px;"}
  .tool-tip-icon 
    =link_to "javascript:;", :id => 'screenshot_button', :class => '', :onclick=> "snapshot()" do
      .callout.left
        %p Screenshot 
      %i.fa.fa-camera.fa-2x




