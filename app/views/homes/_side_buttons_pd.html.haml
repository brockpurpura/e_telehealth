.function_bar.action_button_bars{:style => "padding: 8px 0px 8px 0px;"}
  .icon_holder
    .tool-tip-icon.action_buttons.bell_action              
      =link_to "javascript:;", :id => 'ring_bell', :class=>'',  :onclick=> "ringBell()" do
        .callout.left
          %p Doorbell 
        %i.fa.fa-bell.fa-2x{:style => "margin-left: 3px;"}
  .icon_holder
    .tool-tip-icon 
      =link_to "javascript:;", :id => 'self_view_button', :class => '', :onclick=> "toggle_selfview()" do  
        .callout.left
          %p Self View 
        %i.fa.fa-user.fa-2x{:style => "margin-left: 3px; font-size: 22px;"}


  .slider.bell_volume.hidden
    .lab
      %h2.sm Volume
