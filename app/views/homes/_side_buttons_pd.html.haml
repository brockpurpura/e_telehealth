    =link_to "javascript:;", :id => 'make_bookmark', :class => '', :onclick=> "confirm_bookmark()" do
      .callout.left
        %p Bookmarks 
      %i.fa.fa-map-pin.fa-2x
  .tool-tip-icon     
    =link_to "javascript:;", :id => 'see_more', :class => '', :onclick=> "show_more()" do
      .callout.left
        %p Self View  
      %i.fa.fa-list-ul.fa-2x.left_3
  .tool-tip-icon 
    =link_to "javascript:;", :id => 'screenshot_button', :class => '', :onclick=> "go_to_bookmark('Home')"  do
      .callout.left
        %p Screenshot  
      %i.fa.fa-camera.fa-2x

