= render "application/caregility_greeting"

%main  
  .univago_login_form
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class=> '', :onsubmit=>'return formValidation(this)' }) do |f|
      = render "devise/shared/error_messages", resource: resource
      %br
      %h1.center Reset Your Password
      %br
      .center
        %p.reset_description Weâ€™ll email you instructions to reset your password.
      %br
      %br
      %label{:for=>"inputEmail"} Email
      = f.email_field :email, :autocomplete=>'off', :id=>"inputEmail", :class => "" 
      %label.error#inputEmailError.hidden{:for=>"inputEmail"} Enter your email
      %br
      %br
      .center
        = f.submit "Submit", :class => ""
      %br
      %br
      =render :partial => "/homes/contact"  
      %br
      = render :partial => '/homes/privacy'
    
