= render "application/caregility_greeting"

%main
  .univago_login_form   
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :onsubmit=>'return formValidation(this)' }) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      %br
      %h1.center Reset Your Password
      %br
      %label{:for=> "inputPassword"} New Password
      = f.password_field :password, autofocus: true, :class => "", :id => 'inputPassword'
      %label.error#inputPasswordError.hidden{:for=>"inputPassword"} Enter new password
      %br
      %br
      %label{:for=> "inputConfirmPassword"} Confirm New Password      
      = f.password_field :password_confirmation, autocomplete: "off", :class => "", :id => "inputConfirmPassword" 
      %label.error#inputConfirmPasswordError.hidden{:for=>"inputConfirmPassword"} Confirm new password
      %br
      %br
      .center
        = f.submit "Submit", :class => ""
      %br
      %br
      =render :partial => "/homes/contact"  
      %br
      = render :partial => '/homes/privacy'
