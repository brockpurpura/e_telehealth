.admin_provisioning
  .col-sm-12
    .padd 
      .login_top_right_menu  
      //  Already registered? 
      //  = link_to 'Sign In', "/admin" , :class => ''
      

  .col-xs-12
    .col-sm-3
    .col-xs-6
      .col-xs-12
        .col-xs-1
        .col-xs-10
          #pic.large_logo
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            %br
            .font-15
              Email
            = f.email_field :email, autofocus: true, :class => "login_edittext"
            %br
            %br
            .font-15
            Password
            = f.password_field :password, autocomplete: "off", :class => "login_edittext"  
            %br
            %br
            .font-15
              Password Confirmation
            = f.password_field :password_confirmation, autocomplete: "off", :class => "login_edittext"  
            - if @minimum_password_length
              %br
              %em  Minimum password length: #{@minimum_password_length} 
            %br
            = f.submit "Sign up", :class => "btn btn-primary admin_signup_button"
        .col-xs-1    
    .col-xs-12
      .col-xs-2
      .col-xs-8
        .center.admin_caption 
          =render :partial => "/homes/contact"  
        %br
        .admin_privacy
          = render :partial => '/homes/privacy'
      .col-xs-2   
