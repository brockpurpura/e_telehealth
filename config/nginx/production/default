# Default server configuration
#
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	# SSL configuration
	#
	listen 443 ssl default_server;
	listen [::]:443 ssl default_server;
        ssl_certificate /etc/ssl/certs/uhe_default.crt;
        ssl_certificate_key /etc/ssl/certs/uhe_default.key;

	# Additional security settings
	#ssl_prefer_server_ciphers on;
	ssl_protocols TLSv1.2;
	#ssl_ciphers HIGH+AES+TLSv1.2@STRENGTH:!eNULL:!aNULL:!MD5;
	ssl_ciphers HIGH+AES+TLSv1.2@STRENGTH:!eNULL:!aNULL:!MD5:!DH:!DHE;

	#
	# Note: You should disable gzip for SSL traffic.
	# See: https://bugs.debian.org/773332
	#
	# Read up on ssl_ciphers to ensure a secure configuration.
	# See: https://bugs.debian.org/765782
	#
	# Self signed certs generated by the ssl-cert package
	# Don't use them in a production server!
	#
	# include snippets/snakeoil.conf;
       
        passenger_enabled on; 
        rails_env production;

	root /home/jschell/telehealth/public;

        client_max_body_size 100M;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name healthcare.univago.com;

	passenger_max_request_time 20;
        passenger_min_instances 6;
        passenger_concurrency_model thread;
        passenger_thread_count 182;
        passenger_max_request_queue_size 500;
        passenger_memory_limit 2000;

        # The following is replaced by the separate 8443 configuration below
        # location /cable {
        #   passenger_app_group_name telehealth_websocket;
        #   passenger_force_max_concurrent_requests_per_process 0;
        # }

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
          root html;
        }

	# pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
	#
	#location ~ \.php$ {
	#	include snippets/fastcgi-php.conf;
	#

	#	# With php7.0-cgi alone:
	#	fastcgi_pass 127.0.0.1:9000;
	#	# With php7.0-fpm:
	#	fastcgi_pass unix:/run/php7.0-fpm.sock;
	#}

	# deny access to .htaccess files, if Apache's document root
	# concurs with nginx's one
	#
	#location ~ /\.ht {
	#	deny all;
	#}

    if ($scheme = http) {
        return 301 https://$server_name$request_uri;
    }

    add_header "Access-Control-Allow-Origin"  *;

}

server {
    listen 8443 ssl;
    ssl_certificate /etc/ssl/certs/uhe_default.crt;
    ssl_certificate_key /etc/ssl/certs/uhe_default.key;
    server_name healthcare.univago.com;
    root /home/jschell/telehealth/public;
    rails_env production;
    passenger_enabled on;
    passenger_app_group_name telehealth_websocket;
    passenger_app_type rack;
    passenger_startup_file cable/config.ru;
    passenger_min_instances 2;
    passenger_force_max_concurrent_requests_per_process 0;
    passenger_max_request_queue_size 2000;
    add_header "Access-Control-Allow-Origin"  *;
}

server {
        listen 3443;

        ssl on;
        ssl_certificate /etc/ssl/certs/uhe_default.crt;
        ssl_certificate_key /etc/ssl/certs/uhe_default.key;

        location / {
                proxy_pass http://localhost:3000;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
        }
}

